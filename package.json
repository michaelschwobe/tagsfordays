{
  "name": "tagsfordays",
  "description": "TagsForDays extends traditional bookmarking with advanced organization and search capabilities.",
  "homepage": "https://tagsfordays.fly.dev",
  "repository": "github:michaelschwobe/tagsfordays",
  "author": {
    "name": "Michael Schwobe",
    "email": "mschwobe@gmail.com",
    "url": "https://schwobe.dev"
  },
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "clean": "rm -rf .cache && rm -rf build && rm -rf coverage && rm -rf playwright-report && rm -rf public/build && rm -rf test-results && rm -rf node_modules",
    "coverage": "vitest run --coverage",
    "dev": "remix dev --manual",
    "e2e": "pnpm --silent run build && CI=true playwright test",
    "e2e:dev": "playwright test --ui",
    "format": "prettier --ignore-unknown --write .",
    "knip": "knip",
    "lint": "eslint --ext=.js,.jsx,.ts,.tsx .",
    "setup": "pnpm install && playwright install && pnpm run build && prisma generate && prisma migrate deploy && pnpm run seed:min",
    "seed": "prisma db seed",
    "seed:min": "MINIMAL_SEED=true prisma db seed",
    "start": "remix-serve ./build/index.js",
    "start:mocks": "MOCKS=true remix-serve ./build/index.js",
    "studio": "prisma studio",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run knip && pnpm run coverage && pnpm run e2e"
  },
  "dependencies": {
    "@conform-to/react": "^0.9.1",
    "@conform-to/zod": "^0.9.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-select": "^2.0.0",
    "@remix-run/css-bundle": "^2.4.0",
    "@remix-run/node": "^2.4.0",
    "@remix-run/react": "^2.4.0",
    "@remix-run/serve": "^2.4.0",
    "@tanstack/react-table": "^8.11.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cookie": "^0.6.0",
    "dotenv": "^16.3.1",
    "happy-dom": "^12.10.3",
    "isbot": "^3.7.1",
    "prisma": "^5.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.2.4",
    "tailwind-merge": "^2.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@flydotio/dockerfile": "^0.4.11",
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "^2.4.0",
    "@remix-run/eslint-config": "^2.4.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "enforce-unique": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "knip": "^3.8.3",
    "msw": "^2.0.11",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "remix-development-tools": "^3.6.2",
    "tailwindcss": "^3.3.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=21.4.0",
    "pnpm": ">=8.12.1"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "packageManager": "pnpm@8.12.1",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
